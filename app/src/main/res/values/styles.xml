<?xml version="1.0" encoding="utf-8"?>
<resources>

    //стили для кнопок
    <style name="DefaultButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">@color/black95</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_stroke_black95_press_white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    //стили для текста
    <style name="DefaultTextStyle_large" parent="@android:style/TextAppearance">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_gamelevels_large</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    //стили для текста
    <style name="DefaultTextStyle_xlarge" parent="@android:style/TextAppearance">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_gamelevels_xlarge</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    //стили для текста
    <style name="DefaultTextStyle_normal" parent="@android:style/TextAppearance">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_gamelevels_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    //стили диалогового окна
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>