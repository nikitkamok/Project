<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.planegame.Game
        android:id="@+id/game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/levels_container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right|top"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/levels_container2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/levels_pauseMenuBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="pause" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/levels_container3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/levels_container4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/levels_resetLevelBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset" />

            <Button
                android:id="@+id/levels_settingsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="settings" />

            <Button
                android:id="@+id/levels_resumePauseBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resume" />

            <Button
                android:id="@+id/levels_exitBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exit" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>