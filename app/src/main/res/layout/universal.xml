<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/levels_background2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/levels_background" />

    <com.example.planegame.GameView
        android:id="@+id/gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/levels_container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right|top"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/levels_container2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/levels_pauseMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="pause" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/levels_container3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/levels_container4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/levels_resetlevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset" />

            <Button
                android:id="@+id/levels_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="settings" />

            <Button
                android:id="@+id/levels_resumePause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resume" />

            <Button
                android:id="@+id/levels_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exit" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>