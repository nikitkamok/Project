<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/gamelevels_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/main_background" />

    <LinearLayout
        android:id="@+id/gamelevels_top_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|left"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/gamelevels_container2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/gamelevels_buttonBack"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:background="@drawable/btn_back_state_pressed" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gamelevels_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/gamelevels_container1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/gamelevels_lines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/line1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/gamelevels_level1"
                            style="@style/DefaultTextStyle_xlarge"
                            android:text="1"
                            android:textSize="60sp" />

                        <TextView
                            android:id="@+id/gamelevels_level2"
                            style="@style/DefaultTextStyle_xlarge"
                            android:text="2"
                            android:textSize="60sp" />

                        <TextView
                            android:id="@+id/gamelevels_level3"
                            style="@style/DefaultTextStyle_xlarge"
                            android:text="3"
                            android:textSize="60sp" />

                        <TextView
                            android:id="@+id/gamelevels_level4"
                            style="@style/DefaultTextStyle_xlarge"
                            android:text="4"
                            android:textSize="60sp" />

                        <TextView
                            android:id="@+id/gamelevels_level5"
                            style="@style/DefaultTextStyle_xlarge"
                            android:text="5"
                            android:textSize="60sp" />

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>